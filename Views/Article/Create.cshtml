@model CrudApp.Models.Article
@{
ViewData["Title"] = "Create Article";
}
@section Styles {
<link href="~/css/style.css" rel="stylesheet" type="text/css" />
}

<div class="container">
   <div class="row">
      <div class="col-md-12">
         <div class="modal fade" id="createModal">
            <div class="modal-dialog dialog-lg">
               <div class="modal-content">
                  
                  <div class="modal-header">
                     <div>
                        <h5>Ajouter un Article</h5>
                     </div>
                  </div>

                  <div class="modal-body">
                     <form asp-controller="Article" asp-action="Store" method="post" class="form">
                        <div class="form-group row">
                           <label for="inputText" class="col-sm-2 col-form-label" asp-for="Reference"></label>
                           <div class="col-sm-9">
                              <input type="number" class="form-control form-control-sm input-field" asp-for="Reference">
                           </div>

                           <label for="inputText" class="col-sm-2 col-form-label" asp-for="Designation"></label>
                           <div class="col-sm-9">
                              <input type="text" class="form-control form-control-sm input-field" asp-for="Designation">
                           </div>

                           <label for="inputText" class="col-sm-2 col-form-label" asp-for="Categorie"></label>
                           <div class="col-sm-9">
                              <input type="text" class="form-control form-control-sm input-field" asp-for="Categorie">
                           </div>

                           <label for="inputText" class="col-sm-2 col-form-label" asp-for="Prix"></label>
                           <div class="col-sm-9">
                              <input type="number" class="form-control form-control-sm input-field" asp-for="Prix">
                           </div>

                           <label for="inputText" class="col-sm-2 col-form-label" asp-for="Promo"></label>
                           <div class="col-sm-9">
                              <input type="text" class="form-control form-control-sm input-field" asp-for="Promo">
                           </div>
                        </div>

                        <button type="reset" class="btn btn-secondary btn-sm">Annuler</button>
                        <button type="submit" class="btn btn-secondary btn-sm">Enregistrer</button>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>